<div class="chat-window">

  <div class="chat-top">
    <h4><%= @bid.project.service.name %></h4>
    <span class="pro-name"><i class="fa fa-thumb-tack" id="user_<%= @bid.pro.id %>" aria-hidden="true"></i> <%= @bid.pro.full_name %></span>
  </div>

  <div class="panel panel-default chatbox">
    <% if @bid.messages.any? %>
      <div class="panel-body" id="messages">
        <%= render partial: 'messages/message', collection: @bid.messages%>
      </div>
    <%else%>
      <div class="panel-body" id="messages">
      </div>
    <%end%>
  </div>

  <%= render partial: 'messages/message_form', locals: {message: @message, bid: @bid}%>

  <p class="main" id="user_<%= current_user.id %>">
    Online as: <%= current_user.first_name %>
  </p>

</div>
